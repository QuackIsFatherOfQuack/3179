{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Share of Visitors by Length of Stay (2015â€“2025)",
  "data": { "url": "data/Viz6_long_duration_visitors.csv" },
  "transform": [
    {"filter": "datum.Duration != 'Total'"},
    {
      "joinaggregate": [
        {"op": "sum", "field": "VisitorCount", "as": "MonthlyTotal"}
      ],
      "groupby": ["Month"]
    },
    {
      "calculate": "datum.VisitorCount / datum.MonthlyTotal",
      "as": "Share"
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Month",
      "type": "temporal",
      "timeUnit": "yearmonth",
      "title": "Month"
    },
    "y": {
      "field": "Share",
      "type": "quantitative",
      "stack": "normalize",
      "axis": {
        "format": ".0%",
        "title": "Share of Visitors (%)"
      }
    },
    "color": {
      "field": "Duration",
      "type": "nominal",
      "title": "Length of Stay",
      "sort": [
        "6 and under 12 months",
        "3 and under 6 months",
        "2 and under 3 month",
        "1 and under 2 months",
        "2 weeks and under 1 month",
        "1 and under 2 weeks",
        "Under 1 week"
     ]
    }
    ,
    "tooltip": [
      {"field": "Month", "type": "temporal"},
      {"field": "Duration", "type": "nominal"},
      {"field": "Share", "type": "quantitative", "format": ".1%", "title": "Share of Total"},
      {"field": "VisitorCount", "type": "quantitative", "format": ",", "title": "Visitors"}
    ]
  },
  "width": 600,
  "height": 400,
  "config": {
    "axis": {"labelFontSize": 12, "titleFontSize": 13},
    "view": {"stroke": "transparent"}
  }
}
