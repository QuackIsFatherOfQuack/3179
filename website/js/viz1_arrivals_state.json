{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Total Arrivals in Australia by State",
  "width": 700,
  "height": 400,
  "params": [
    {
      "name": "Year_selection",
      "value": 2024,
      "bind": {
        "input": "range",
        "min": 1991,
        "max": 2024,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "projection": { "type": "equirectangular" },
  "layer": [
    {
      "data": {
        "url": "js/au-states-topo.json",
        "format": { "type": "topojson", "feature": "austates" }
      },
      "mark": { "type": "geoshape", "fill": "#eee", "stroke": "white" }
    },
    {
      "data": { "url": "data/yearly_arrivals.csv" },
      "transform": [
        {
          "calculate": "datum.State == 'NSW' ? 0 : datum.State == 'Vic.' ? 1 : datum.State == 'Qld' ? 2 : datum.State == 'SA' ? 3 : datum.State == 'WA' ? 4 : datum.State == 'Tas.' ? 5 : datum.State == 'NT' ? 6 : datum.State == 'ACT' ? 7 : null",
          "as": "state_id"
        },
        { "filter": "datum.Year == Year_selection" },
        {
          "calculate": "datum.Arrivals < 100000 ? '<100k': datum.Arrivals < 500000 ? '100k-500k' : datum.Arrivals < 1000000 ? '500k-1M' : datum.Arrivals < 2500000 ? '1M-2.5M' : '>2.5M'",
          "as": "Arrival_Group"
        },
        {
          "lookup": "state_id",
          "from": {
            "data": {
              "url": "js/au-states-topo.json",
              "format": { "type": "topojson", "feature": "austates" }
            },
            "key": "id"
          },
          "as": "geo"
        }
      ],
      "mark": { "type": "geoshape", "stroke": "white", "strokeWidth": 0.5 },
      "encoding": {
        "shape": { "field": "geo", "type": "geojson" },
        "color": {
          "field": "Arrival_Group",
          "type": "nominal",
          "scale": {
            "domain": ["<100k", "100k-500k", "500k-1M", "1M-2.5M", ">2.5M"],
            "range": ["#fee5d9", "#fcae91", "#fb6a4a", "#de2d26", "#a50f15"]
          },
          "legend": { "title": "Number of Arrivals" }
        },
        "tooltip": [
          { "field": "State", "title": "State" },
          { "field": "Arrival_Group", "title": "Group" },
          { "field": "Arrivals", "title": "Arrivals", "format": "," },
          { "field": "Year", "title": "Year" }
        ]
      }
    },
    {
      "data": { "values": [{}] },
      "transform": [
        { "calculate": "'Year: ' + Year_selection", "as": "Year_label" }
      ],
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "top",
        "fontSize": 18,
        "fontWeight": "bold",
        "dx": -10,
        "dy": 10
      },
      "encoding": {
        "text": { "field": "Year_label" },
        "x": { "value": 500 },
        "y": { "value": 10 }
      }
    }
  ],
  "config": { "view": { "stroke": "transparent" } }
}
